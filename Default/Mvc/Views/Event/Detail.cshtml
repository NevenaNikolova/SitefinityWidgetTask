@model SitefinityWebApp.Mvc.Models.EventViewModel
<h3 style="font-size:30px; font-weight:bold;">
    @Html.Raw(Model.Title)
</h3>
<div class="col-md-6">
    <table class="table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>@Html.Raw(Model.Title)</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>@Html.Raw(Model.Content)</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>@Html.Raw(Model.EventStart)</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>@Html.Raw(Model.EventEnd)</td>
            </tr>
            <tr>
                <th>Url Name</th>
                <td>@Html.Raw(Model.UrlName)</td>
            </tr>
            <tr>
                <th>Published On</th>
                <td>@Html.Raw(Model.PublicationDate)</td>
            </tr>
            <tr>
                <th>Calendar</th>
                <td>@Html.Raw(Model.Parent.Title)</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@Html.Raw(Model.Status)</td>
            </tr>
        </tbody>
    </table>
    <br/>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>